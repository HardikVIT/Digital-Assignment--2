#include <stdio.h>
int divide(int num,int count);
int main(){
    int n=15,count=0;
    int z=divide(n,count);
    printf("%d",z);
}
int divide(int num,int count){
    if (num==1){
        return 0;
    }
    else{
        int num2=num/2;
        count+=1;
        num=num2+divide(num2,count);
        return (count); 
    }
}
